<?xml version="1.0" encoding="utf-8"?>
<com.halo.redpacket.widget.dialog.bottomsheet.BottomSheetItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="?attr/xui_bottom_sheet_grid_item_mini_width"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="?attr/xui_bottom_sheet_grid_item_paddingBottom"
    android:paddingTop="?attr/xui_bottom_sheet_grid_item_paddingTop">

    <RelativeLayout
        android:layout_width="?attr/xui_bottom_sheet_grid_item_icon_size"
        android:layout_height="?attr/xui_bottom_sheet_grid_item_icon_size"
        android:layout_marginBottom="?attr/xui_bottom_sheet_grid_item_icon_marginBottom"
        android:layout_marginTop="?attr/xui_bottom_sheet_grid_item_icon_marginTop">

        <ViewStub
            android:id="@+id/grid_item_subscript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout="@layout/xui_bottom_sheet_grid_item_subscript"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/grid_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerInside" />
    </RelativeLayout>

    <TextView
        android:id="@+id/grid_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textAppearance="?attr/xui_bottom_sheet_grid_item_text_appearance" />

</com.halo.redpacket.widget.dialog.bottomsheet.BottomSheetItemView>