<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--*********************************************
   *                 PopupWindow Style             *
   **********************************************-->
    <style name="XUI.Animation" parent="@android:style/Animation" />

    <style name="XUI.Animation.PopUpMenu" />

    <style name="XUI.Animation.PopUpMenu.Center">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_top</item>
    </style>

    <style name="XUI.Animation.PopUpMenu.Left">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_bottomleft_to_topright</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="XUI.Animation.PopUpMenu.Right">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_bottomright_to_topleft</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_topleft_to_bottomright</item>
    </style>

    <style name="XUI.Animation.PopDownMenu" />

    <style name="XUI.Animation.PopDownMenu.Center">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_bottom</item>
    </style>

    <style name="XUI.Animation.PopDownMenu.Left">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_topleft_to_bottomright</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="XUI.Animation.PopDownMenu.Right">
        <item name="android:windowEnterAnimation">@anim/pop_grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/pop_shrink_from_bottomleft_to_topright</item>
    </style>



    <!--*********************************************
       *                 Button Style             *
       **********************************************-->
    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minHeight">?attr/xui_btn_view_height</item>
    </style>

    <style name="Button.Radius">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">?attr/xui_config_content_spacing_horizontal</item>
        <item name="android:paddingEnd">?attr/xui_config_content_spacing_horizontal</item>
        <item name="android:background">@drawable/rb_bg_selector</item>
        <item name="android:textColor">?attr/xui_round_btn_text_color</item>
        <item name="android:textSize">?attr/xui_btn_view_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Style" parent="Button">
        <item name="android:layout_width">?attr/xui_btn_view_width</item>
        <item name="android:layout_height">?attr/xui_btn_view_height</item>
        <item name="android:textSize">?attr/xui_btn_view_text_size</item>
        <item name="android:textColor">@color/xui_config_color_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Blue" parent="Button.Style">
        <item name="android:background">@drawable/xui_config_bg_blue_btn</item>
    </style>

    <style name="Button.Blue.wrap">
        <item name="android:paddingStart">?attr/xui_config_content_spacing_horizontal</item>
        <item name="android:paddingEnd">?attr/xui_config_content_spacing_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--*********************************************
   *                 EditTextStyle                 *
   **********************************************-->
    <style name="EditTextBase" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textDirection">locale</item>
    </style>

    <!--基础输入框样式-->
    <style name="EditText" parent="EditTextBase">
        <item name="android:layout_height">?attr/xui_config_size_edittext_height</item>
        <item name="android:textSize">?attr/xui_config_size_edittext_input_text</item>
        <item name="android:paddingStart">?attr/xui_config_size_edittext_left_padding</item>
        <item name="android:paddingEnd">?attr/xui_config_size_edittext_left_padding</item>
        <item name="android:textColor">?attr/xui_config_color_input_text</item>
        <item name="android:textColorHint">?attr/xui_config_color_hint_text</item>
        <item name="android:singleLine">true</item>
        <!--华为手机光标问题解决-->
        <item name="android:imeOptions">normal</item>
    </style>

    <style name="EditText.Clear">
        <item name="cet_clearIcon">@drawable/xui_ic_default_clear_btn</item>
        <item name="cet_clearIconSize">21dp</item>
    </style>

    <style name="EditText.Password">
        <item name="pet_iconShow">@drawable/pet_icon_visibility_24dp</item>
        <item name="pet_iconHide">@drawable/pet_icon_visibility_off_24dp</item>
        <item name="pet_hoverShowsPw">false</item>
        <item name="pet_nonMonospaceFont">false</item>
        <item name="pet_enableIconAlpha">true</item>
    </style>

    <style name="DropDownMenu">
        <item name="ddm_dividerColor">?attr/xui_config_color_separator_dark</item>
        <item name="ddm_dividerWidth">@dimen/default_ddm_divider_width</item>
        <item name="ddm_dividerMargin">@dimen/default_ddm_divider_margin</item>
        <item name="ddm_underlineColor">?attr/xui_config_color_separator_light</item>
        <item name="ddm_underlineHeight">@dimen/default_ddm_underline_height</item>
        <item name="ddm_maskColor">@color/default_ddm_mask_color</item>
        <item name="ddm_menuTextSize">@dimen/default_ddm_menu_text_size</item>
        <item name="ddm_menuTextPaddingHorizontal">@dimen/default_ddm_menu_text_padding_horizontal</item>
        <item name="ddm_menuTextPaddingVertical">@dimen/default_ddm_menu_text_padding_vertical</item>
        <item name="ddm_menuTextSelectedColor">?attr/colorAccent</item>
        <item name="ddm_menuTextUnselectedColor">?attr/xui_config_color_content_text</item>
        <item name="ddm_menuSelectedIcon">@drawable/ddm_ic_arrow_up</item>
        <item name="ddm_menuUnselectedIcon">@drawable/ddm_ic_arrow_down</item>
        <item name="ddm_menuBackgroundColor">@color/xui_config_color_white</item>
        <item name="ddm_menuHeightPercent">0.5</item>
    </style>



</resources>